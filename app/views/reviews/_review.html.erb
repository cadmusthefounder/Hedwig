<li id="review-<%= review.id %>">
  <%= link_to gravatar_for(review.owner, size: 50), review.owner %>
  <span class="owner"><%= link_to review.owner.name, review.owner %></span>
  <span class="rating"><%= review.rating %>
  <span class="comment"><%= review.comment %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.updated_at) %> ago.
  </span>
</li>
