<% provide(:title, "New Review") %>

<h1>New Review</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@user, @review]) do |f| %>
      <div class="form-group">

        <div id="star-rating"></div>

        <% @review.errors.full_messages_for(:rating).each do |msg| %>
          <p class="text-danger"><%= msg %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :comment, "Comment" %>
        <%= f.text_field :comment, class: "form-control" %>

        <% @review.errors.full_messages_for(:comment).each do |msg| %>
          <p class="text-danger"><%= msg %></p>
        <% end %>
      </div>

      <%= f.submit "Create my review!", class: "btn btn-primary btn-block" %>

    <% end %>
  </div>
</div>

<script>
$('#star-rating').raty({
  path: '/assets/',
  scoreName: 'review[rating]'
});
</script>

