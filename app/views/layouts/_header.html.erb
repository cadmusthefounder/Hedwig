<header>
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to "Hedwig", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Tasks <span class="caret"></span>
            </a>

            <ul class="dropdown-menu">
              <li><%= link_to "All Tasks", root_path %></li>
              <li><%= link_to "My Tasks", my_tasks_path %></li>
              <li><%= link_to "Tasks Assigned to Me", assigned_to_me_tasks_path %></li>
            </ul>
          </li>

          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Credit Purchases <span class="caret"></span>
              </a>

              <ul class="dropdown-menu">
                <li><%= link_to "All Purchases", all_admin_credit_purchases_path %></li>
                <li><%= link_to "Pending Purchases", pending_admin_credit_purchases_path %></li>
                <li><%= link_to "Approved Purchases", approved_admin_credit_purchases_path %></li>
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "New Task", new_task_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              You have <%= number_to_currency current_user.credit %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Top Up", new_credit_purchase_path %></li>
              <li><%= link_to "Transaction History", credit_purchases_path %></li>
            </ul>
          </li>
          <li><%= link_to "Logout", sessions_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", "#", class: "login-button" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
