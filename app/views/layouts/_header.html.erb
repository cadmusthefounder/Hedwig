<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('Hedwig Logo.png'), root_path, class: "navbar-brand" %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Task<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "All Tasks", root_path %></li>
              <li><%= link_to "My Tasks", my_tasks_path %></li>
              <li><%= link_to "Tasks Assigned to Me", assigned_to_me_tasks_path %></li>
            </ul>
          </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %>
              <b class="caret">
              </b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "My Profile", user_path(current_user) %></li>
              <li><%= link_to "Update Profile", update_profile_path %></li>
            </ul>
          </li>

          <% if current_user.admin? %>
            <li><%= link_to "Couriers", users_path %></li>
            <li><%= link_to "Transactions", admin_transactions_path %></li>
          <% end %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "New Task", new_task_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              You have <%= number_to_currency current_user.credit %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Top Up", new_transactions_credit_purchase_path %></li>
              <li><%= link_to "Cash Out", new_transactions_cash_out_request_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Transaction History", transactions_path %></li>
            </ul>
          </li>
          <li><%= link_to "Logout", sessions_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", "#", class: "login-button" %></li>
        <% end %>
      </ul>

    </nav>
  </div>
</header>
