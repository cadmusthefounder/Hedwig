<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>

  <body class="chat container">
    <%= render "layouts/header" %>
    <div>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
