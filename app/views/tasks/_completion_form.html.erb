<div class="modal fade" id="task-completion-modal" tabindex="-1">
  <div class="modal-dialog">
    <form class="modal-content" data-remote="true" method="POST">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h4 class="modal-title">Completing a task</h4>
      </div>
      <div class="modal-body">
        <div class="alert-container"></div>
        <div class="form-group">
          <label>Completion token</label>
          <input type="text" class="form-control input-completion-token" placeholder="foobar123" name="completion_token">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary btn-submit">Submit</button>
      </div>
    </form>
  </div>
</div>
