<h1><%= @title %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Amount</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.created_at.strftime("%b %e, %Y") %></td>
        <td><%= purchase.user.name %>
        <td><%= number_to_currency purchase.amount %></td>
        <td><%= purchase.status_string %></td>

        <td>
          <% if purchase.pending? %>
            <%= link_to approve_admin_credit_purchase_path(purchase), method: :post, class: "btn btn-success btn-xs" do %>
              <i class="glyphicon glyphicon-ok"></i>
              Approve
            <% end %>
          <% end %>
        </td>
    <% end %>
  </tbody>
</table>
