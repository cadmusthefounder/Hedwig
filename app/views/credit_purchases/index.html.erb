<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @credit_purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.created_at.strftime("%b %e, %Y") %></td>
        <td><%= number_to_currency purchase.amount %></td>
        <td><%= purchase.status_string %></td>
    <% end %>
  </tbody>
</table>
